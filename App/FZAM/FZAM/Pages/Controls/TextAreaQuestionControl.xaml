<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FZAM.Pages.Controls.TextAreaQuestionControl">
    <StackLayout HorizontalOptions="FillAndExpand">
        <Editor x:Name="TextField" HorizontalOptions="FillAndExpand" HeightRequest="70"/>
        <Button Text="{Binding l10n.NextButton}" HorizontalOptions="Center"  x:Name="OkButton"
                TextColor="#764a6b" BackgroundColor="#ebe0e6" HeightRequest="40" Clicked="acceptButtonClicked"/>
        </StackLayout>
</ContentView>