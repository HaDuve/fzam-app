<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FZAM.Pages.Controls.LabeledLabel">
    <Grid HorizontalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" VerticalOptions="Start" x:Name="LabelTitle">TITLE</Label>
        <Label Grid.Column="1"  VerticalOptions="Start" x:Name="LabelText">TEXT</Label>
        <ImageButton Grid.Column="1" Margin="0,0,10,0" HeightRequest="30" IsVisible="False" IsEnabled="False" BackgroundColor="Transparent"
                     HorizontalOptions="End" Source="button_info.png" x:Name="InfoButton" Clicked="InfoClick"/>

    </Grid>
</ContentView>