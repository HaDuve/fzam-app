<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FZAM.Pages.Controls.TextQuestionControl">
    <StackLayout HorizontalOptions="FillAndExpand">
            <Entry x:Name="TextField" HorizontalOptions="FillAndExpand" TextChanged="TextField_OnTextChanged"/>
        <Button HorizontalOptions="Center"  x:Name="OkButton"
                TextColor="#764a6b" BackgroundColor="#ebe0e6" HeightRequest="40" Clicked="acceptButtonClicked"/>
        </StackLayout>
</ContentView>